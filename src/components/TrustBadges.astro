---
import { FaAward, FaTrophy, FaMedal } from "react-icons/fa6";
import ShieldSVG from "./ShieldSVG.astro";
---

<div id="trust-badges" class="flex flex-row justify-between items-start sm:justify-center gap-1 sm:gap-4 mb-2 sm:mb-4 mt-2 w-full max-w-[500px] mx-auto px-1 sm:px-0">
  <!-- Badge 1: Best Price -->
  <div class="flex flex-col items-center group relative z-10 w-1/3">
    <div class="relative w-[4.5rem] h-[5.5rem] sm:w-24 sm:h-28 flex items-start justify-center filter drop-shadow-md transform transition-transform hover:scale-105 duration-300">
      <ShieldSVG />
      
      <div class="relative z-10 flex flex-col items-center justify-start text-center p-1 pt-3 sm:pt-4">
        <FaMedal className="text-gray-700 text-xl sm:text-2xl mb-0.5" />
        <span class="text-[10px] sm:text-xs font-bold text-gray-800 leading-[1.1] sm:leading-tight">
          Best Price<br/>Match<br/>Guarantee
        </span>
      </div>
    </div>
  </div>

  <!-- Badge 2: Best Movers -->
  <div class="flex flex-col items-center group relative z-10 w-1/3 sm:-mt-2">
    <div class="relative w-[4.5rem] h-[5.5rem] sm:w-24 sm:h-28 flex items-start justify-center filter drop-shadow-md transform transition-transform hover:scale-105 duration-300">
      <ShieldSVG />

      <div class="relative z-10 flex flex-col items-center justify-start text-center p-1 pt-3 sm:pt-4">
        <FaTrophy className="text-gray-700 text-xl sm:text-2xl mb-0.5" />
        <span class="text-[10px] sm:text-xs font-bold text-gray-800 leading-[1.1] sm:leading-tight">
          Best<br/>Movers<br/>Award
        </span>
      </div>
    </div>
  </div>

  <!-- Badge 3: Best Auto Shipping -->
  <div class="flex flex-col items-center group relative z-10 w-1/3">
    <div class="relative w-[4.5rem] h-[5.5rem] sm:w-24 sm:h-28 flex items-start justify-center filter drop-shadow-md transform transition-transform hover:scale-105 duration-300">
      <ShieldSVG />

      <div class="relative z-10 flex flex-col items-center justify-start text-center p-1 pt-3 sm:pt-4">
        <FaAward className="text-gray-700 text-xl sm:text-2xl mb-0.5" />
        <span class="text-[10px] sm:text-xs font-bold text-gray-800 leading-[1.1] sm:leading-tight">
          Best Auto<br/>Shipping
        </span>
      </div>
    </div>
  </div>
</div>
