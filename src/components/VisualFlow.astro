<div class="visual-flow-container pointer-events-none absolute inset-0 z-40 overflow-visible" style="top: 0; left: 0; width: 100%; height: 100%;">
    <svg 
      class="w-full h-full" 
      viewBox="0 0 1440 900" 
      preserveAspectRatio="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <defs>
        <marker id="arrowhead" markerWidth="10" markerHeight="7" 
        refX="9" refY="3.5" orient="auto">
          <polygon points="0 0, 10 3.5, 0 7" fill="white" />
        </marker>
      </defs>
      
      <!-- Path simulating flow from Titles (Left) to Form (Right) 
           Desktop Alignment (1440x900 viewbox)
           Start: x=250 (Near 'We Deliver')
           End: x=880 (Left edge of Form container)
      -->
      <path 
        d="M 250,450 
           C 400,450 500,550 650,550 
           S 720,550 750,550" 
        fill="none" 
        stroke="white" 
        stroke-width="6" 
        stroke-dasharray="20,20"
        stroke-linecap="round"
        marker-end="url(#arrowhead)"
        class="flow-line"
      />
    </svg>
  </div>
  
  <style>
    /* Default: Hidden on mobile */
    .visual-flow-container {
        display: none;
    }

    /* Show on Desktop (md: 768px and up) */
    @media (min-width: 768px) {
        .visual-flow-container {
            display: block !important;
        }
    }

    .flow-line {
      animation: dash 40s linear infinite; 
      opacity: 0.8;
      filter: drop-shadow(0 0 5px rgba(0,0,0,0.5));
    }
  
    @keyframes dash {
      to {
        stroke-dashoffset: -1000;
      }
    }

    /* Adjust position based on screen width to better track background image scaling */
    @media (min-width: 1024px) {
        .visual-flow-container svg {
            viewBox: 0 0 1440 800; /* Baseline */
        }
    }

    @media (min-width: 1536px) {
        /* 2xl Breakpoint adjustments if needed */
    }
  </style>
