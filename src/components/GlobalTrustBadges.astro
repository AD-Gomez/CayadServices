---
import { FaStar, FaFacebook, FaStarHalfAlt } from "react-icons/fa";
import { FcGoogle } from "react-icons/fc";
import { SiTrustpilot } from "react-icons/si";

// Common card style to ensure consistency
const cardStyle = "bg-white p-5 rounded-2xl border border-slate-100 shadow-[0_2px_15px_rgba(0,0,0,0.04)] hover:shadow-[0_8px_25px_rgba(0,0,0,0.08)] transition-all duration-300 hover:-translate-y-1 flex flex-col justify-between items-start min-w-[210px] h-32 group cursor-default";
---

<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 mb-12 mt-8">
  <div class="flex flex-wrap justify-center gap-5 sm:gap-6 lg:gap-8">
    
    <!-- Google Badge -->
    <div class={cardStyle}>
      <div class="flex items-start justify-between w-full">
        <div class="flex flex-col">
            <span class="text-slate-500 font-medium text-sm">Google</span>
            <span class="text-slate-800 font-bold text-2xl leading-none mt-1">4.7</span>
        </div>
        <div class="w-8 h-8 rounded-full bg-white border border-slate-100 shadow-sm flex items-center justify-center">
            <FcGoogle className="text-xl" />
        </div>
      </div>
      <div class="w-full">
        <div class="flex text-yellow-400 text-sm mb-1.5 gap-0.5">
            <FaStar />
            <FaStar />
            <FaStar />
            <FaStar />
            <FaStarHalfAlt />
        </div>
        <span class="text-[11px] text-slate-400 font-medium">(5,004 Reviews)</span>
      </div>
    </div>

    <!-- BBB Badge -->
    <div class={cardStyle}>
      <div class="flex items-start justify-between w-full">
        <div class="flex flex-col">
            <span class="text-slate-500 font-medium text-sm tracking-tight">BBB Rating</span>
            <span class="text-slate-800 font-bold text-2xl leading-none mt-1">4.5</span>
        </div>
         <span class="text-slate-800 font-bold font-serif text-xl opacity-80">BBB</span>
      </div>
      <div class="w-full flex items-end justify-between">
        <div class="flex flex-col">
            <div class="flex text-yellow-400 text-sm mb-1.5 gap-0.5">
                <FaStar />
                <FaStar />
                <FaStar />
                <FaStar />
                <FaStarHalfAlt />
            </div>
            <span class="text-[11px] text-slate-400 font-medium">(500+ Reviews)</span>
        </div>
        <div class="border-[1px] border-slate-200 rounded px-1.5 py-0.5 flex flex-col items-center bg-slate-50">
            <span class="text-[6px] font-bold text-slate-600 leading-none">ACCREDITED</span>
            <span class="text-[6px] font-bold text-slate-600 leading-none">BUSINESS</span>
        </div>
      </div>
    </div>

    <!-- Trustpilot Badge -->
    <div class={cardStyle}>
       <div class="flex items-center gap-2 mb-1">
        <SiTrustpilot className="text-[#00b67a] text-2xl" />
        <span class="font-bold text-slate-900 text-lg">Trustpilot</span>
      </div>
      <div class="w-full">
        <div class="flex bg-[#00b67a] w-fit text-white px-2 py-0.5 gap-1 text-xs mb-2 rounded-sm items-center">
            <FaStar />
            <FaStar />
            <FaStar />
            <FaStar />
            <FaStar />
        </div>
        <span class="text-[11px] text-slate-400 font-medium block">(500+ Reviews)</span>
      </div>
    </div>

    <!-- Facebook Badge -->
    <div class={cardStyle}>
      <div class="flex items-center gap-2 mb-1">
        <FaFacebook className="text-[#1877F2] text-2xl" />
        <span class="font-bold text-[#1877F2] text-lg">facebook</span>
      </div>
      <div class="w-full">
         <div class="flex items-center gap-2 mb-1.5">
            <span class="font-bold text-slate-800 text-xl">5.0</span>
             <div class="flex text-yellow-400 text-xs gap-0.5">
                <FaStar />
                <FaStar />
                <FaStar />
                <FaStar />
                <FaStar />
            </div>
         </div>
        <span class="text-[11px] text-slate-400 font-medium block">(500+ Reviews)</span>
      </div>
    </div>

  </div>
</div>
