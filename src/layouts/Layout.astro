---
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import SocialProofMini from "../components/SocialProofMini";
import ShareButton from "../components/ShareButton.astro"; 
import "aos/dist/aos.css";
import "../styles/animate.css";

interface Props {
  content: string;
  title: string;
  isLanding?: boolean;
}

const { title, content, isLanding = false } = Astro.props;
---

<!doctype html>
<html lang="en" class="overflow-x-clip">
  <head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-11465331667"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-11465331667');
    </script>

    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-N3DG6F8M");
    </script>
    
    <meta charset="UTF-8" />
    <meta name="description" content={content} />
    <meta name="viewport" content="width=device-width" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Outfit:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
    <link rel="icon" type="image/webp" href="/img/title-icon.webp" sizes="120x120" />

    <meta name="google-site-verification" content="mYTM7w20cgtRtlR9aFWNFViHfvRiKXcCrYxMptzOg2M" />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:title" content="Car Shipping Nationwide In USA | Cayad Auto Transport" />
    <meta property="og:description" content="The most cost effective auto transport company in US" />
    <meta property="og:image" content="https://cayadservices.com/img/vd.webp" />
    <meta property="og:url" content="https://cayadservices.com/" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@cayadservices" />
    <meta name="twitter:creator" content="@cayadservices" />

    <title>{title}</title>
  </head>

  <body class="relative font-sans text-slate-800 antialiased overflow-x-hidden">
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N3DG6F8M" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>

    <Navbar client:load />
    
    <main class={isLanding ? "" : "pt-[72px] sm:pt-[80px]"}>
      <slot />
    </main>

    <Footer />
    
    <SocialProofMini client:load />

    <ShareButton />

    <script is:inline>
      document.addEventListener('click', function(e) {
        const target = e.target.closest('a');
        if (!target) return;
        const href = target.href || "";

        // WhatsApp Tracking for Ads
        if (href.includes('wa.me') || href.includes('whatsapp.com')) {
          gtag('event', 'conversion', { 'send_to': 'AW-11465331667' });
          gtag('event', 'click_whatsapp', { 'send_to': 'AW-11465331667' });
        }
        // Messenger Tracking for Ads
        else if (href.includes('m.me')) {
          gtag('event', 'conversion', { 'send_to': 'AW-11465331667' });
          gtag('event', 'click_messenger', { 'send_to': 'AW-11465331667' });
        }
        // Call Tracking for Ads
        else if (href.startsWith('tel:')) {
          gtag('event', 'conversion', { 'send_to': 'AW-11465331667' });
          gtag('event', 'click_call', { 'send_to': 'AW-11465331667' });
        }
      });

      // Submit Quote Tracking for Ads
      document.addEventListener('submit', function(e) {
        gtag('event', 'conversion', { 'send_to': 'AW-11465331667' });
        gtag('event', 'submit_quote', { 'send_to': 'AW-11465331667' });
      });

      // Función de compra (Purchase) con Label específico
      window.trackPurchase = function(value, transaction_id) {
        gtag('event', 'conversion', {
          'send_to': 'AW-11465331667/XWYiCPbUgeYbENOnjNsq',
          'value': value || 50.0,
          'currency': 'USD',
          'transaction_id': transaction_id || ''
        });
      };
    </script>

    <script>
      import { aosInit } from "../lib/aos";
      aosInit();
    </script>
  </body>
</html>