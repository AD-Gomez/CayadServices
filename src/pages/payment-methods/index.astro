---
import Layout from "../../layouts/Layout.astro";
import ButtonScrollTop from "../../components/buttons/ButtonScrollTop";
import Testimonials from "../../components/Testimonials";
import GetQuote from "../../components/buttons/GetQuote.astro";
---
<link rel="canonical" href="https://cayadservices.com/payment-methods" />

<style>
  .custom-background {
    background:
      linear-gradient(hsla(250, 75%, 5%, 0.5), rgba(6, 3, 21, 0.5)),
      url("/img/payment.webp") center center no-repeat;
    background-size: cover;
  }
</style>

<Layout
  title="Payment Methods | Cayad Auto Transport"
  content="Explore flexible payment options from Cayad Auto Transport, a reliable car transportation company"
>
  <div class="relative w-full h-[50vh] min-h-[400px] flex flex-col items-center justify-center custom-background">
     <div class="absolute inset-0 bg-black/50 z-0"></div>
     <div class="relative z-10 w-full max-w-7xl px-6 lg:px-8 text-center text-white">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold font-heading mb-6 tracking-tight drop-shadow-lg">
        Flexible Payment Methods
      </h1>
      <p class="text-xl sm:text-2xl font-medium mb-8 drop-shadow-md bg-black/20 inline-block px-6 py-2 rounded-full backdrop-blur-sm border border-white/10">
        No surprises, just smooth and secure transactions
      </p>
      <GetQuote />
    </div>
  </div>

  <div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 md:px-6">
      
      <div class="max-w-4xl mx-auto bg-white rounded-3xl shadow-card border border-slate-100 overflow-hidden">
        <div class="bg-btn-blue p-6 text-center">
           <h2 class="text-2xl font-bold text-white">Scan or Click to Pay</h2>
           <p class="text-blue-100 mt-2">No fees when using Zelle, Cash App, or Venmo</p>
        </div>
        
        <div class="p-8 md:p-12">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-12 sm:gap-y-16">
              
              <!-- Zelle -->
              <div class="flex flex-col items-center text-center">
                 <div class="w-48 h-48 bg-slate-50 rounded-2xl flex items-center justify-center p-4 mb-4 shadow-sm border border-slate-100">
                    <img src="/img/zelle.webp" alt="Zelle QR Code" class="max-w-full max-h-full object-contain mix-blend-multiply" />
                 </div>
                 <h3 class="text-xl font-bold text-slate-900 mb-2">Zelle</h3>
                 <div class="text-slate-600 bg-slate-50 px-4 py-2 rounded-lg text-sm border border-slate-100 w-full max-w-[200px]">
                    <div class="font-semibold text-slate-900">Cayad Services LLC</div>
                    <div>sales@cayadservices.com</div>
                 </div>
              </div>

               <!-- Cash App -->
              <div class="flex flex-col items-center text-center">
                 <div class="w-48 h-48 bg-slate-50 rounded-2xl flex items-center justify-center p-4 mb-4 shadow-sm border border-slate-100">
                    <img src="/img/cashapp.webp" alt="CashApp QR Code" class="max-w-full max-h-full object-contain mix-blend-multiply" />
                 </div>
                 <h3 class="text-xl font-bold text-slate-900 mb-2">CashApp</h3>
                 <div class="text-slate-600 bg-slate-50 px-4 py-2 rounded-lg text-sm border border-slate-100 w-full max-w-[200px]">
                    <div class="font-semibold text-slate-900">$CayadServiceLLC</div>
                    <div>sales@cayadservices.com</div>
                 </div>
              </div>

              <!-- PayPal -->
              <div class="flex flex-col items-center text-center">
                 <div class="w-48 h-48 bg-slate-50 rounded-2xl flex items-center justify-center p-4 mb-4 shadow-sm border border-slate-100">
                    <img src="/img/paypal.webp" alt="PayPal QR Code" class="max-w-full max-h-full object-contain mix-blend-multiply" />
                 </div>
                 <h3 class="text-xl font-bold text-slate-900 mb-2">PayPal</h3>
                 <div class="text-slate-600 bg-slate-50 px-4 py-2 rounded-lg text-sm border border-slate-100 w-full max-w-[200px]">
                    <div class="font-semibold text-slate-900">Cayad Services LLC</div>
                    <div>sales@cayadservices.com</div>
                 </div>
              </div>

              <!-- Venmo -->
              <div class="flex flex-col items-center text-center">
                 <div class="w-48 h-48 bg-slate-50 rounded-2xl flex items-center justify-center p-4 mb-4 shadow-sm border border-slate-100">
                    <img src="/img/venmo.webp" alt="Venmo QR Code" class="max-w-full max-h-full object-contain mix-blend-multiply" />
                 </div>
                 <h3 class="text-xl font-bold text-slate-900 mb-2">Venmo</h3>
                 <div class="text-slate-600 bg-slate-50 px-4 py-2 rounded-lg text-sm border border-slate-100 w-full max-w-[200px]">
                    <div class="font-semibold text-slate-900">CayadServices</div>
                    <div>pays@cayadservices.com</div>
                 </div>
              </div>

            </div>
        </div>
      </div>

      <div class="mt-8 text-center bg-blue-50 text-blue-800 rounded-xl p-4 max-w-2xl mx-auto border border-blue-100 shadow-sm">
        <p class="font-medium flex items-center justify-center gap-2">
           <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 112 0 1 1 0 01-2 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
           No fee will be charged over Zelle, Cash App & Venmo.
        </p>
      </div>

      <div class="mt-16">
        <Testimonials title="Happy Clients, Safe Car Deliveries" client:load />
      </div>

    </div>
  </div>

  <ButtonScrollTop client:load />
</Layout>
