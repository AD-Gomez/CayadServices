---
import Layout from "../../layouts/Layout.astro";
import GetQuoete from "../../components/buttons/GetQuote.astro";
import Testimonials from "../../components/Testimonials";
import GetQuote from "../../components/buttons/GetQuote.astro";
import ButtonScrollTop from "../../components/buttons/ButtonScrollTop";
import SecondFooter from "../../components/SecondFooter.astro";
import logoFb from "../../../public/img/facebookReview2.webp";
import { FaPhone } from "react-icons/fa";
---
<link rel="canonical" href="https://cayadservices.com/contact" />

<style>
  .custom-background {
    background:
      linear-gradient(hsla(250, 75%, 5%, 0.5), rgba(6, 3, 21, 0.5)),
      url("/img/reviews.webp") center center no-repeat;
    background-size: cover;
  }
</style>


<Layout title="Contact Us | Cayad Auto Transport" 
content="You need to get in touch with us? Call now or visit our website. We are always here to help.">
  <section
    class="w-[80%] xs:w-full sm:w-full md:w-full xs:px-4 sm:px-4 md:px-4 my-12 mx-auto flex flex-col justify-between"
  >
    <h1 class="text-4xl font-semibold">Cayad Auto Transport Contact</h1>
    <h2 class="text-sm mt-2 text-[#555]">
      To Get a Premium Quote or discuss your concerns about car transportation,
      contact us directly or fill out the form and we will get back to you
      shortly
    </h2>
  </section>
  <section
    class="w-[80%] my-12 mx-auto xs:w-full sm:w-full flex xs:flex-col sm:flex-col md:flex-col justify-between"
  >
    <div class="w-[48%] xs:w-full sm:w-full md:w-full xs:px-4 sm:px-4 md:px-4">
      <div class="w-full shadow-2xl bg-btn-blue py-8 rounded-xl h-max">
        <h3 class="text-white ml-4 text-2xl font-semibold">Our location</h3>
      </div>
      <div class="map w-full mt-8">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d13746.382951171547!2d-87.2973415!3d30.5324684!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x889095ee7be6367f%3A0xad61013643e158fe!2sCayad%20Auto%20Transport!5e0!3m2!1sen!2sve!4v1708374379148!5m2!1sen!2sve"
          height="450"
          style="border:0;"
          class="w-full rounded-xl"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
    <div
      class="w-[45%] xs:mt-4 sm:mt-4 md:mt-4 xs:w-full sm:w-full md:w-full xs:px-4 sm:px-4 md:px-4"
    >
      <div
        class="w-full bg-btn-blue shadow-2xl flex flex-col items-center py-8 rounded-xl h-max"
      >
        <h3 class="text-white text-2xl font-semibold">
          Reaching out to a specialist !
        </h3>
        <button
          class="bg-[#007BAF] mt-8 w-[200px] hover:bg-btn-hover duration-300 rounded-xl px-7 py-3"
        >
          <a
            class="text-white text-xl flex w-full justify-center items-center"
            href="tel:+14696190747"
            >Call Now <FaPhone className="text-[#FFFF] ml-4" />
          </a>
        </button>
      </div>
      <div
        class="w-full mt-4 shadow-2xl bg-btn-blue flex flex-col items-center py-8 rounded-xl h-max"
      >
        <h3 class="text-white text-2xl font-semibold">Business Hours</h3>
        <div class="w-[80%] xs:w-[90%] sm:w-[90%] mt-8 text-base text-white">
          <p>Weekdays: 8:00am to 5:00pm</p>
          <p>Sat & Sun: 8:00am to 5:00pm</p>
        </div>
      </div>
      <div
        class="w-full shadow-2xl mt-4 bg-btn-blue flex flex-col items-center py-8 rounded-xl h-max"
      >
        <h3 class="text-white text-xl font-semibold">
          PACE, FL 32571
        </h3>
        <button
          class="bg-[#007BAF] mt-8 w-[90%] rounded-xl px-7 py-3"
          onclick="window.location.href='mailto:info@cayadservices.com'"
        >
          <a class="text-white text-base flex w-full items-center">
            info@cayadservices.com
          </a>
        </button>
        <button class="bg-[#007BAF] mt-4 w-[90%] rounded-xl px-7 py-3">
          <a
            class="text-white text-base flex w-full items-center"
            href="tel:+14696190747"
          >
            (469) 619-0747
          </a>
        </button>
      </div>
    </div>
  </section>

  <ButtonScrollTop client:load />
</Layout>
