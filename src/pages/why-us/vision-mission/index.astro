---
import Layout from "../../../layouts/Layout.astro";
import StepVision from "../../../components/StepVision";
import Testimonials from "../../../components/Testimonials";
import ButtonScrollTop from "../../../components/buttons/ButtonScrollTop";
import SecondFooter from "../../../components/SecondFooter.astro";
import GetQuote from "../../../components/buttons/GetQuote.astro";
---
<link rel="canonical" href="https://cayadservices.com/why-us/vision-mission" />
<style>
  .custom-background {
    background:
      linear-gradient(hsla(250, 75%, 5%, 0.5), rgba(6, 3, 21, 0.5)),
      url("/img/banner.webp") center center no-repeat;
    background-size: cover;
  }
</style>

<Layout title="Vision & Mission | Cayad Auto Transport"
content="Our mission is to become the most cost-effective car shipper industry in the U.S. by integrating top-notch tools with the highly expertise of specialists.">
  <div class="relative w-full h-[50vh] min-h-[400px] flex flex-col items-center justify-center custom-background">
     <div class="absolute inset-0 bg-black/50 z-0"></div>
     <div class="relative z-10 w-full max-w-7xl px-6 lg:px-8 text-center text-white">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold font-heading mb-6 tracking-tight drop-shadow-lg">
        Exceptional Delivery and Rapid Growth
      </h1>
      <p class="text-xl sm:text-2xl font-medium mb-8 drop-shadow-md bg-black/20 inline-block px-6 py-2 rounded-full backdrop-blur-sm border border-white/10">
        Rich History of Innovation, Dependability and Success
      </p>
      <GetQuote />
    </div>
  </div>

  <div class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 md:px-6">
      
      <div class="text-center mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold font-heading text-slate-900 leading-tight">
          Exceptional Car Shipping Service in U.S and Rapid Growth
        </h2>
      </div>

      <div class="w-full mb-20">
         <!-- StepVision component container -->
         <div class="bg-slate-50 rounded-3xl p-8 border border-slate-100 shadow-sm">
           <StepVision client:load />
         </div>
      </div>

      <div class="mb-12">
        <Testimonials title="Real Auto Transport Testimonials" client:load />
      </div>

    </div>
  </div>

  <SecondFooter />
  <ButtonScrollTop client:load />
</Layout>
