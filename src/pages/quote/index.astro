    <main class="relative z-10 w-full max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 xl:grid-cols-12 gap-6 lg:max-h-[calc(100vh-4rem)]">

        <div class="lg:col-span-7 xl:col-span-8 lg:overflow-y-auto pr-2">
          <EstimatorQuote client:load />
        </div>

        <aside class="lg:col-span-5 xl:col-span-4 lg:col-start-8 xl:col-start-9">
