---
import Quote2ServiceSelector from "../../components/quote2/Quote2ServiceSelector";
import Testimonials from "../../components/Testimonials";
import Footer from "../../components/Footer.astro";
import Tooltip from "../../components/Tooltip.astro"; 
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Cayad Auto Transport provides the most cost effective car shipping services across the US. Get your quote today!"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/webp"
      href="/img/title-icon.webp"
      sizes="120x120"
    />
    <title>Your Car Shipping Quote | Cayad Auto Transport</title>
    <link rel="canonical" href="https://cayadservices.com/quote2" />

    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-N3DG6F8M");
    </script>
  </head>

  <body class="bg-indigo-50/30 font-sans min-h-screen flex flex-col">
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-N3DG6F8M"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    
    <header class="w-full bg-white border-b border-slate-200 sticky top-0 z-50 shadow-sm">
      <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between gap-4"
      >
        <Tooltip label="Go to Homepage" position="bottom">
          <a href="/" aria-label="Cayad Auto Transport" class="shrink-0">
            <img
              src="/img/logo-cayad.webp"
              alt="Cayad Auto Transport logo"
              class="h-9 w-auto md:h-10"
              width="2688"
              height="609"
            />
          </a>
        </Tooltip>
        <div class="flex items-center gap-2 sm:gap-3">
          <!-- WhatsApp Button -->
          <Tooltip label="Chat on WhatsApp" position="bottom">
            <a
              href="https://api.whatsapp.com/send/?phone=14696190747&text&type=phone_number&app_absent=0"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="WhatsApp"
              class="h-9 w-9 sm:h-10 sm:w-10 flex items-center justify-center rounded-lg bg-[#25D366] text-white shadow-md hover:bg-[#20b858] transition-all hover:-translate-y-0.5"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </a>
          </Tooltip>
          
          <!-- Messenger Button -->
          <Tooltip label="Chat on Messenger" position="bottom">
            <a
              href="https://m.me/116222094837969"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Messenger"
              class="h-9 w-9 sm:h-10 sm:w-10 flex items-center justify-center rounded-lg bg-[#0084FF] text-white shadow-md hover:bg-[#0074e0] transition-all hover:-translate-y-0.5"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.373 0 0 4.974 0 11.111c0 3.498 1.744 6.614 4.469 8.654V24l4.088-2.242c1.092.301 2.246.464 3.443.464 6.627 0 12-4.974 12-11.111S18.627 0 12 0zm1.191 14.963l-3.055-3.26-5.963 3.26L10.732 8l3.131 3.259L19.752 8l-6.561 6.963z"/>
              </svg>
            </a>
          </Tooltip>
          
          <!-- Phone Button -->
          <Tooltip label="Call us at (469) 619-0747" position="bottom">
            <a
              href="tel:+14696190747"
              aria-label="Call Cayad Auto Transport"
              class="inline-flex items-center justify-center rounded-lg bg-sky-600 px-3 sm:px-5 py-2 text-sm font-semibold text-white shadow-md shadow-sky-600/20 hover:bg-sky-700 transition-all hover:-translate-y-0.5"
            >
              Call (469) 619-0747
            </a>
          </Tooltip>
        </div>
      </div>
    </header>

    <main class="flex-grow w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
      
      {/* Main Quote Component */}
      <Quote2ServiceSelector client:load />

      {/* Testimonials Section */}
      <section class="mt-16 md:mt-24">
        <div class="text-center mb-10">
           <h2 class="text-2xl font-bold text-slate-800">Trusted by Thousands</h2>
           <p class="text-slate-500">See what our customers are saying about their experience.</p>
        </div>
        <div
          class="bg-white border border-slate-200 rounded-2xl shadow-sm py-8 px-4 md:px-8"
        >
          <Testimonials
            title=""
            position="center"
            client:load
          />
        </div>
      </section>

    </main>

    <Footer />
  </body>
</html>