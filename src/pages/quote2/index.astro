---
// --- Imports (sin cambios) ---
import ShowNumberLead from "../../components/quote2/ShowNumberLead";
import QuoteDetails from "../../components/quote2/QuoteDetails";
import Testimonials from "../../components/Testimonials";
import Footer from "../../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Cayad Auto Transport provides the most cost effective car shipping services across the US. Get your quote today!"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/webp"
      href="/img/title-icon.webp"
      sizes="120x120"
    />
    <title>Your Car Shipping Quote | Cayad Auto Transport</title>
    <link rel="canonical" href="https://cayadservices.com/quote2" />

    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-N3DG6F8M");
    </script>
  </head>

  <body class="bg-slate-50 font-sans">
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-N3DG6F8M"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>

    <header class="w-full bg-white border-b border-slate-200 sticky top-0 z-50">
      <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between gap-4"
      >
        <a href="/" aria-label="Cayad Auto Transport" class="shrink-0">
          <img
            src="/img/logo-cayad.webp"
            alt="Cayad Auto Transport logo"
            class="h-10 w-auto"
            width="2688"
            height="609"
          />
        </a>
        <div class="flex items-center gap-3 sm:gap-4">
          <a
            href="tel:+14696190747"
            aria-label="Call Cayad Auto Transport"
            class="inline-flex items-center justify-center rounded-lg bg-sky-600 px-3 sm:px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-sky-700 transition-colors"
          >
            Call (469) 619-0747
          </a>
          <div class="AuthorizeNetSeal hidden md:block">
            <script type="text/javascript">
              var ANS_customer_id = "40b07bd0-492e-41ef-af3d-203518035d55";
            </script>
            <script
              type="text/javascript"
              src="https://verify.authorize.net:443/anetseal/seal.js"></script>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
      <section class="text-center mb-8 md:mb-12">
        <h1
          class="text-3xl md:text-4xl font-bold text-slate-800 tracking-tight"
        >
          Your Quote is Ready!
        </h1>
        <div
          class="mt-4 max-w-2xl mx-auto flex items-center justify-center gap-3 rounded-lg bg-sky-50 border border-sky-200 text-sky-800 px-4 py-3"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6 shrink-0"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
            ></path></svg
          >
          <p class="text-sm">
            A detailed copy will be sent to your email. <span
              class="font-semibold">No payment is required</span
            > to book your shipment.
          </p>
        </div>
      </section>

      <div class="grid grid-cols-1 lg:grid-cols-12 xl:grid-cols-12 gap-8">
        <div class="lg:col-span-8 xl:col-span-8 space-y-6">
          <ShowNumberLead client:load />
          <QuoteDetails client:load />
        </div>

        <aside class="lg:col-span-4 xl:col-span-4 xl:col-start-9 lg:mt-6 xl:mt-8">
          <div class="sticky top-24 space-y-6">
            <div
              class="bg-white border border-slate-200 rounded-xl shadow-lg overflow-hidden"
            >
              <div class="bg-emerald-50/50 p-5 border-t border-emerald-200">
                <div class="text-center">
                  <p class="text-sm font-medium text-slate-700">Due Today</p>
                  <p class="text-4xl font-extrabold text-emerald-600 my-1">
                    $0
                  </p>
                  <p class="text-xs text-slate-500 font-medium">
                    Book now, pay later.
                  </p>
                </div>
              </div>

              <div
                class="p-5 bg-slate-50/70 border-t border-slate-200 space-y-3"
              >
                <!-- <a
                  href="#"
                  class="block w-full text-center rounded-lg bg-sky-600 px-4 py-3 text-base font-semibold text-white shadow-sm hover:bg-sky-700 transition-colors"
                >
                  Book Shipment
                </a> -->
                <div class="grid grid-cols-2 gap-3">
                  <a
                    href="tel:+14696190747"
                    class="flex items-center justify-center gap-2 w-full text-center rounded-lg bg-white border border-slate-300 px-4 py-2.5 text-sm font-semibold text-slate-700 shadow-sm hover:bg-slate-50 transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-5 h-5"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                      ></path></svg
                    >
                    Call Us
                  </a>
                  <a
                    href="https://wa.me/14696190747?text=Hi%2C%20I%20requested%20a%20car%20shipping%20quote"
                    target="_blank"
                    rel="noopener"
                    class="flex items-center justify-center gap-2 w-full text-center rounded-lg bg-emerald-600 text-sm font-semibold text-white shadow-sm hover:bg-emerald-700 transition-colors"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-5 h-5"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      ><path
                        d="M16.6,14.2l-1.5-0.2c-0.2,0-0.3-0.1-0.5,0.1l-0.7,0.7c-0.5-0.2-1.5-0.7-2.6-1.8c-1-1-1.6-2.1-1.8-2.6l0.7-0.7 c0.1-0.1,0.2-0.3,0.1-0.5l-0.2-1.5c-0.1-0.5-0.5-0.8-1-0.8H7.6C7.1,7.2,6.7,7.6,6.7,8.1c0,0.1,0,0.2,0,0.3 c0.2,1.2,0.7,2.3,1.5,3.4c1.2,1.7,2.8,3,4.7,3.9c0.2,0.1,0.3,0.1,0.5,0.1c0.7,0,1.3-0.4,1.5-1.1l0.2-0.6 C17.3,14.7,17.1,14.3,16.6,14.2z M12,2C6.5,2,2,6.5,2,12s4.5,10,10,10c5.5,0,10-4.5,10-10S17.5,2,12,2z M12,20.5 c-4.7,0-8.5-3.8-8.5-8.5S7.3,3.5,12,3.5s8.5,3.8,8.5,8.5S16.7,20.5,12,20.5z"
                      ></path></svg
                    >
                    WhatsApp
                  </a>
                </div>
              </div>
            </div>
          </div>
        </aside>
      </div>

      <section class="mt-12 md:mt-16">
        <div
          class="bg-white border border-slate-200 rounded-xl shadow-sm py-8 px-4"
        >
          <Testimonials
            title="Real Customer Experiences"
            position="center"
            client:load
          />
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
